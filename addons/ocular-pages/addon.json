{
    "name": "Ocular color page backgrounds",
    "description": "Adds some nice cosmetic flair as user pages will use their ocular status color as the background color of the page. In develepment and might not work,",
    "tags": ["theme", "beta"],
    "credits": [
      {
        "name": "RedStrider",
        "link": "https://scratch.mit.edu/users/therealRedStrider/"
      }
    ],
    "userscripts": [
        {
            "url": "ocular_pages.js",
            "matches": ["https://scratch.mit.edu/users/*/"],
            "runAtComplete": false,
            "if": {
              "settings": { "ocularColors": true }
            }
        }
    ],
    "settings": [
        {
          "name": "Complimentary decor",
          "id": "comp-link",
          "type": "boolean",
          "default": false
        },
        {
            "name": "Introduce a slight gradient",
            "id": "gradient",
            "type": "boolean",
            "default": false
        }
    ],
    "enabledByDefault": false,
    "libraries": ["tinycolor2"]
  }
  
